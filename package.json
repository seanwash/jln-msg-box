{
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "dist/main.js",
  "dependencies": {
    "@npeersab/msgreader": "^2.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "cuid": "^2.1.8",
    "electron-squirrel-startup": "^1.0.0",
    "pouchdb": "^7.2.2",
    "react-query": "^3.8.2",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "build": "webpack --config ./config/webpack.config.js --mode=production",
    "react:dev": "webpack serve --config ./config/webpack.config.js --mode=development",
    "electron:dev": "nodemon",
    "dev": "concurrently --kill-others --names=\"WEB,APP\" -c \"bgCyan.black.bold,bgBlack.white.bold\" \"npm run react:dev\" \"npm run electron:dev\"",
    "start": "npm run build && electron dist/main.js",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "rebuild": "electron-rebuild -f -w pouchdb",
    "postinstall": "npm run rebuild"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/mime-types": "^2.1.0",
    "@types/pouchdb": "^6.4.0",
    "@types/react": "^16.14.3",
    "@types/react-dom": "^16.9.10",
    "concurrently": "^5.3.0",
    "electron": "^11.2.3",
    "electron-is-dev": "^1.2.0",
    "electron-rebuild": "^2.3.5",
    "html-webpack-plugin": "^5.0.0",
    "nodemon": "^2.0.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-loader": "^8.0.16",
    "wait-on": "^5.2.1",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "msgbox"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
